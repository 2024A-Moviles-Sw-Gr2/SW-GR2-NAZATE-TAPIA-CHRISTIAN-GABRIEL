<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_crear_facultad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCrearFacultad">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Crear Facultad"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/input_numeroProfesores"
        android:layout_width="240dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Cantidad de profesores"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/input_fechaMatriculas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fechaMatriculas"
        app:layout_constraintTop_toBottomOf="@+id/input_fechaMatriculas" />

    <EditText
        android:id="@+id/input_presupuesto"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Presupuesto"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_numeroProfesores"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_numeroProfesores"
        app:layout_constraintTop_toBottomOf="@+id/input_numeroProfesores" />

    <Switch
        android:id="@+id/input_estaEnClases"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Â¿Estan en clases?"
        app:layout_constraintEnd_toEndOf="@+id/input_presupuesto"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/input_presupuesto"
        app:layout_constraintTop_toBottomOf="@+id/input_presupuesto" />


    <EditText
        android:id="@+id/input_fechaMatriculas"
        android:layout_width="238dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Fecha de matriculas"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre" />

    <Button
        android:id="@+id/btn_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/input_estaEnClases"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/input_estaEnClases"
        app:layout_constraintTop_toBottomOf="@+id/input_estaEnClases" />

</androidx.constraintlayout.widget.ConstraintLayout>